@model CurrencyExchange.Models.AddCurrencyViewModel

<h1>Add Currency</h1>

<form method="post" asp-action="Add">
    <div class="mt-3">
        <label class="form-label">Currency Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label class="form-label">Decimal Name</label>
        <input type="text" class="form-control" asp-for="Decimalname" />
        <span asp-validation-for="Decimalname" class="text-danger"></span>

        <label class="form-label">Non-Decimal Name</label>
        <input type="text" class="form-control" asp-for="Nondecimal" />
        <span asp-validation-for="Nondecimal" class="text-danger"></span>

        <label class="form-label">Currency Symbol</label>
        <input type="text" class="form-control" asp-for="Symbol" />
        <span asp-validation-for="Symbol" class="text-danger"></span>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="millionRadio" value="Million" asp-for="Millionlakh">
            <label class="form-check-label" for="millionRadio">
                Million
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="lakhRadio" value="lakh" asp-for="Millionlakh">
            <label class="form-check-label" for="lakhRadio">
                Lakh
            </label>
        </div>

        <div class="mt-5">
            <button type="submit" class="btn btn-primary btn-lg">Save</button>
        </div>
    </div>
</form>