@{
}
@model CurrencyExchange.Entities.Currency

@{
    ViewData["Title"] = "Delete Currency";
}

<h1>Delete Currency</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Decimal Name
        </dt>
        <dd class="col-sm-10">
            @Model.Decimalname
        </dd>
        <dt class="col-sm-2">
            Non-Decimal Name
        </dt>
        <dd class="col-sm-10">
            @Model.Nondecimal
        </dd>
        <dt class="col-sm-2">
            Symbol
        </dt>
        <dd class="col-sm-10">
            @Model.Symbol
        </dd>
        <dt class="col-sm-2">
            Million or Lakh
        </dt>
        <dd class="col-sm-10">
            @Model.Millionlakh
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>