@{
}
@model CurrencyExchange.Entities.ExchangeRate

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Exchange Rate</h2>

<h3>Are you sure you want to delete this exchange rate?</h3>
<div>
    <h4>Exchange Rate Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Currency
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Name)
        </dd>

        <!-- Display other properties as needed -->
        <dt class="col-sm-2">
            Buy Rate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyRate)
        </dd>

        <dt class="col-sm-2">
            Sales Rate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesRate)
        </dd>

        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>

        <dt class="col-sm-2">
            Commission Percentage
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommiPer)
        </dd>

        <dt class="col-sm-2">
            Commission Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommiRs)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>