@{
}
@model CurrencyExchange.Models.AddExchangeRateViewModel

@{
    ViewData["Title"] = "Edit Exchange Rate";
}

<h1>Edit Exchange Rate</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="CurrencyID" class="control-label">Currency</label>
        <select asp-for="CurrencyID" class="form-control" asp-items="@(new SelectList(Model.Currencies, "Value", "Text", Model.CurrencyID))">
            <option value="">Please select a currency...</option>
        </select>
        <span asp-validation-for="CurrencyID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BuyRate" class="control-label">Buy Rate</label>
        <input asp-for="BuyRate" class="form-control" />
        <span asp-validation-for="BuyRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SalesRate" class="control-label">Sales Rate</label>
        <input asp-for="SalesRate" class="form-control" />
        <span asp-validation-for="SalesRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User" class="control-label">User</label>
        <input asp-for="User" class="form-control" />
        <span asp-validation-for="User" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CommiPer" class="control-label">Commission Percentage</label>
        <input asp-for="CommiPer" class="form-control" />
        <span asp-validation-for="CommiPer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CommiRs" class="control-label">Commission Rs</label>
        <input asp-for="CommiRs" class="form-control" />
        <span asp-validation-for="CommiRs" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}